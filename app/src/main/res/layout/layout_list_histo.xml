<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background=" #91B8FF"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/btDeleteCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="0.1"
        android:backgroundTint="#EBC36E"
        android:contentDescription="@string/list_histo_bt_delete"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:tint="#9E7A2B"
        android:visibility="visible"
        app:srcCompat="@android:drawable/ic_delete" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingEnd="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtListCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jura_semibold"
                android:gravity="center"
                android:text="@string/histo_category"
                android:textSize="@dimen/list_txt" />

            <TextView
                android:id="@+id/histoCategory"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:textSize="@dimen/list_txt" />

            <TextView
                android:id="@+id/txtListLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:fontFamily="@font/jura_semibold"
                android:gravity="center"
                android:text="@string/list_histo_level"
                android:textSize="@dimen/list_txt" />

            <RatingBar
                android:id="@+id/histoRatingBarLevel"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"
                android:numStars="3"
                android:progressTint=" #3A5D9E"
                android:rating="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtListQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jura_semibold"
                android:gravity="center"
                android:text="@string/histo_question"
                android:textSize="@dimen/list_txt" />

            <TextView
                android:id="@+id/histoQuestion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:inputType="textAutoCorrect|textMultiLine|text"
                android:maxLines="1"
                android:textSize="@dimen/list_txt"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtListDateCreationCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/jura_semibold"
                android:gravity="center"
                android:text="@string/histo_date_creation"
                android:textSize="@dimen/list_txt" />

            <TextView
                android:id="@+id/histoDateCrea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:textSize="@dimen/list_txt"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/btModifyCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_weight="0.1"
        android:backgroundTint="#EBC36E"
        android:contentDescription="@string/modifier_la_carte"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:tint=" #3A5D9E"
        android:visibility="visible"
        app:srcCompat="@android:drawable/ic_menu_edit" />

</LinearLayout>
